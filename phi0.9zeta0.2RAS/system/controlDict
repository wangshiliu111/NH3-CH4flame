FoamFile
{
    version         2;
    format          ascii;
    class           dictionary;
    location        "system";
    object          controlDict;
}

libs            ( "libZYcombustionModels.so"  "libpureChemistryModel.so");

application     reactingFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         2.0;

deltaT          1e-06;

writeControl    adjustableRunTime;

writeInterval   0.01;

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

adjustTimeStep  yes;

maxCo           0.1;

runTimeModifiable yes;

OptimisationSwitches
{
    fileHandler     collated;
    maxThreadFileBufferSize 0;
}


